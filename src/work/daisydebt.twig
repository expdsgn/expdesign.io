

{% extends "../templates/base/work.twig" %}


{% block content %}

    {% for index, p in portfolio %}

    {% for i in p.images %}
    <div>

        <div class="d-flex d-block@medium">

            <div class="pad-top-3x pad-horizontal-3x" style="background-color: {{accent}}">

                <div class="pad-top-3x pad-horizontal-3x">

                    {% if i.browser %}<div class="height@24x b-top b-left b-right b-white c-white b-4x soft-top pad-horizontal">
                        <span>● ● ●</span>
                    </div>{% endif %}

                    {% if i.browser %}<div class="pad b b-white b-4x soft-bottom">
                    {% else %}<div>{% endif %}

                        <img src="/portfolio/{{i.src}}" alt="" title="" class="d-block">

                    </div>

                </div>

            </div>

            {% if i.description %}
            <div class="f-276x fs-small pad-top-3x add-top-2x pad-horizontal-2x pad-vertical-3x@medium add-bottom-2x@medium">
            {% else %}
            <div class="f-276x fs-small pad-top-3x add-top-2x pad-horizontal-2x">
            {% endif %}

                {{i.description}}

            </div>

        </div>

    </div>
    {% endfor %}

    {% endfor %}

{% endblock %}
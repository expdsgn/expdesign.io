

{% extends "templates/base/home.twig" %}


{% block content %}
<section class="vh-100 d-flex fa-center bg-white c-blue@s1">

    <div class="wrap-mid1 wrap-mid0@medium">

        <div class="d-flex fa-center">

            <div class="w-100 animated fadeInUp">

                <div class="row row-top t-center">

                    <div class="col4 col12@medium">

                        <div class="add-top pad-right-3x">

                            <span class="hidden">{{site.title}}</span>

                            {% include 'icons/svg/expdesign.logo.twig' with {'color':'red'} %}

                            <label class="btn btn-large c-red b-red d-block" for="formHire">

                                <span>Available for Hire</span>

                            </label>

                        </div>

                    {% spaceless %}</div>

                    <div class="col7 t-left col12@medium">{% endspaceless %}

                        <h1>{{text}}</h1>

                    </div>

                    <div class="col11 pad-vertical-3x b-top b-bottom b-gray@t2">

                        <nav class="nav c-red">

                            <a href="/#capabilities" title="Capabilities">Capabilities</a>

                            <a href="/about" title="About">About</a>

                            <a href="/portfolio" title="{{site.portfolio[1]}}">Portfolio</a>

                            <a href="/resume" title="{{site.resume[1]}}">Resume</a>

                        </nav>

                    </div>

                </div>



            </div>


        </div>

    </div>

</section>

<section class="pad-horizontal bg-white">

    <div class="vh-100 d-flex fa-center bg-red">

        <div class="wrap-mid1">

            <blockquote class="bq-left">{{quote}}</blockquote>

        </div>

    </div>

</section>

<section id="capabilities" class="bg-white c-blue@s1">

    <div class="wrap-max">

        <div class="vh-100 d-flex fa-center">

            <div class="w-100 shim@84x">

                <h2 class="t-center">Capabilities</h2>

                <div class="row t-center pad-top@3x pad-bottom d-none d-block@medium">

                    <div class="col12">

                        <div class="pad-horizontal-3x add-right@small add-left@small pad-right@small pad-left@small">

                            {% include 'icons/svg/capabilities.twig' %}

                        </div>

                    </div>

                </div>

                <div class="row t-center add-vertical-3x pad-vertical-3x add-top@medium">
                    {% spaceless %}

                    <div class="col3 col6@medium col12@small va-top t-left">

                        {% for i in range(0, 1) %}
                        <div class="card add-bottom-3x pad-bottom-3x">
                            <div class="card_wrap@216x">
                                <h3 class="height@48x">{{capabilities[i].name}}</h3>
                                <div class="fs-small height@120x pad-right">{{capabilities[i].text}}</div>
                                <a class="c-red" href="{{capabilities[i].link}}" rel="nofollow" title="{{capabilities[i].name}} Examples">See Examples on Behance</a>
                            </div>
                        </div>
                        {% endfor %}

                    </div>

                    <div class="col6 d-none@medium">

                        <div class="pad-left-3x pad-right-3x">

                            {% include 'icons/svg/capabilities.twig' %}

                        </div>

                    </div>

                    <div class="col3 col6@medium col12@small t-left">

                        {% for i in range(2, 3) %}
                        <div class="card add-bottom-3x pad-bottom-3x">
                            <div class="card_wrap@216x">
                                <h3 class="height@48x">{{capabilities[i].name}}</h3>
                                <div class="fs-small height@120x pad-right">{{capabilities[i].text}}</div>
                                <a class="c-red" href="{{capabilities[i].link}}" rel="nofollow" title="{{capabilities[i].name}} Examples">See Examples on Behance</a>
                            </div>
                        </div>
                        {% endfor %}

                    </div>

                    {% endspaceless %}

                </div>

            </div>

        </div>

    </div>

</section>

{% endblock %}